networks:
  udemy-network:
    driver: bridge
services:
  db:
    build:
      context: C:\Users\mattheus.martins\Desktop\NTLABS - .NET\REST-with-ASP-Net\REST-with-ASP-NET\REST-with-ASP-NET
      dockerfile: db/Dockerfile
    command: mysqld --default-authentication-plugin=mysql_native_password
    environment:
      MYSQL_DATABASE: rest_with_asp_net
      MYSQL_PASSWORD: docker
      MYSQL_ROOT_PASSWORD: docker
      MYSQL_USER: docker
      TZ: America/Sao_Paulo
    image: rest-with-asp-net-udemy-db
    networks:
      udemy-network: {}
    ports:
    - published: 3308
      target: 3306
    restart: always
  rest-with-asp-net-udemy:
    build:
      context: C:\Users\mattheus.martins\Desktop\NTLABS - .NET\REST-with-ASP-Net\REST-with-ASP-NET\REST-with-ASP-NET
      dockerfile: REST-with-ASP-NET/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: REST-with-ASP-NET
      target: base
    container_name: REST-with-ASP-NET
    depends_on:
      db:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Production
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages;/root/.nuget/fallbackpackages2
      TZ: America/Sao_Paulo
    image: rest-with-asp-net:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages --additionalProbingPath
        /root/.nuget/fallbackpackages2  "/app/bin/Debug/net5.0/REST-with-ASP-NET.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    networks:
      udemy-network: {}
    ports:
    - published: 44300
      target: 80
    tty: true
    volumes:
    - C:\Users\mattheus.martins\Desktop\NTLABS - .NET\REST-with-ASP-Net\REST-with-ASP-NET\REST-with-ASP-NET\REST-with-ASP-NET:/app:rw
    - C:\Users\mattheus.martins\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\mattheus.martins\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\mattheus.martins\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Program Files (x86)\Microsoft Visual Studio\Shared\NuGetPackages:/root/.nuget/fallbackpackages:ro
    - C:\Program Files\dotnet\sdk\NuGetFallbackFolder:/root/.nuget/fallbackpackages2:ro
    - C:\Users\mattheus.martins\.nuget\packages:/root/.nuget/packages:ro
    - C:\Users\mattheus.martins\Desktop\NTLABS - .NET\REST-with-ASP-Net\REST-with-ASP-NET\REST-with-ASP-NET:/src:rw
version: '3.4'